{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "vR2M7$9#pL8@nK4&zQ3!wX5*jH6%dF1!",
    "CORS_ORIGIN": "https://your-frontend-domain.com"
  }
}
